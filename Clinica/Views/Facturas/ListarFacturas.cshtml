@using System.Globalization
@model List<Clinica.ViewModels.FacturaDataTableViewModel>

<div class="container mt-5">
    <h2 class="text-primary mb-4">Listado Completo de Facturas</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">
            No se encontraron facturas disponibles.
        </div>
    }
    else
    {
        <div class="accordion" id="accordionFacturas">
            @foreach (var factura in Model)
            {
                <div class="accordion-item">
                    <h2 class="accordion-header" id="heading_@factura.FacturaID">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@factura.FacturaID" aria-expanded="true" aria-controls="collapse_@factura.FacturaID">
                            Factura ID: @factura.FacturaID - Paciente: @factura.PacienteNombre @factura.PacienteApellido - Fecha: @factura.FechaFactura.ToString("dd/MM/yyyy")
                        </button>
                    </h2>
                    <div id="collapse_@factura.FacturaID" class="accordion-collapse collapse" aria-labelledby="heading_@factura.FacturaID" data-bs-parent="#accordionFacturas">
                        <div class="accordion-body" id="factura_@factura.FacturaID">
                            <h5>Detalles de Factura</h5>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Descripción</th>
                                        <th>Cantidad</th>
                                        <th>Precio Unitario</th>
                                        <th>Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var detalle in factura.Detalles)
                                    {
                                        <tr>
                                            <td>@detalle.Descripcion</td>
                                            <td>@detalle.Cantidad</td>
                                            <td>@string.Format(new CultureInfo("es-CR"), "{0:C}", detalle.PrecioUnitario)</td>
                                            <td>@string.Format(new CultureInfo("es-CR"), "{0:C}", detalle.Subtotal)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                            <h5 class="mt-4">Medicamentos</h5>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Medicamento</th>
                                        <th>Cantidad</th>
                                        <th>Precio Unitario</th>
                                        <th>Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var medicamento in factura.Medicamentos)
                                    {
                                        <tr>
                                            <td>@medicamento.MedicamentoNombre</td>
                                            <td>@medicamento.Cantidad</td>
                                            <td>@string.Format(new CultureInfo("es-CR"), "{0:C}", medicamento.PrecioUnitario)</td>
                                            <td>@string.Format(new CultureInfo("es-CR"), "{0:C}", medicamento.Subtotal)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                            <!-- Botón para imprimir factura -->
                            <div class="text-end mt-3">
                                <button class="btn btn-secondary" onclick="imprimirFactura('factura_@factura.FacturaID')">
                                    <i class="bi bi-printer"></i> Imprimir Factura
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<script>
    function imprimirFactura(id) {
        var contenido = document.getElementById(id).innerHTML;
        var ventana = window.open('', '', 'height=600,width=800');
        ventana.document.write('<html><head><title>Factura</title>');
        ventana.document.write('<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">');
        ventana.document.write('</head><body>');
        ventana.document.write(contenido);
        ventana.document.write('</body></html>');
        ventana.document.close();
        ventana.print();
    }
</script>
